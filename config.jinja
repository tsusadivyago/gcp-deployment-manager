{% set project = env["project"] %}
{% set deployment = env["deployment"] %}
{% set CLUSTER_NAME = deployment + '-gke-cluster' %}
{% set CommonTags = properties["CommonTags"] %}

resources:
- name: boomi-network
  type: network.py
  properties:
    name: boomi-network
    autoCreateSubnetworks: false
    subnetworks:
      - name: boomi-public-subnet
        region: australia-southeast1
        ipCidrRange: 172.16.0.0/21
        privateIpGoogleAccess: true
        enableFlowLogs: false
      - name: boomi-private-subnet
        region: australia-southeast1
        ipCidrRange: 172.16.8.0/21
        privateIpGoogleAccess: true
        enableFlowLogs: false

- name: boomi-allow-ssh-bastion
  type: firewall.py
  properties:
    network: boomi-network
    rules:
      - name: allow-ssh-to-bastion
        allowed:
          - IPProtocol: tcp
            ports:
              - "22"
              - "3389"
        description: Allow SSH from anywhere to Bastion
        direction: INGRESS
        sourceRanges:
          - 0.0.0.0/0
        targetTags:
          - bastion
      - name: allow-http-https
        allowed:
          - IPProtocol: tcp
            ports:
              - "80"
              - "443"
        description: Allow HTTP/HTTPS from anywhere
        direction: INGRESS
        sourceRanges:
          - 0.0.0.0/0