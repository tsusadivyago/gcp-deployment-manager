{% set project = env["project"] %}
{% set deployment = env["deployment"] %}
{% set CLUSTER_NAME = deployment + '-gke-cluster' %}
{% set CommonTags = properties["CommonTags"] %}

resources:
- name: enable-apis
  type: apis.py
  properties:
    consumerId: {{ 'project:' + env['project'] }}
    apis:
      - name: cloudresourcemanager-api
        serviceName: cloudresourcemanager.googleapis.com
      - name: endpoints-api
        serviceName: endpoints.googleapis.com
      - name: filestore-api
        serviceName: file.googleapis.com
      - name: iam-api
        serviceName: iam.googleapis.com
      - name: container-api
        serviceName: container.googleapis.com
      - name: gkeconnect-api
        serviceName: gkeconnect.googleapis.com

- name: boomi-network
  type: network.py
  properties:
    name: boomi-network
    autoCreateSubnetworks: false
    subnetworks:
      - name: boomi-public-subnet
        region: us-central1
        ipCidrRange: 172.16.0.0/21
        privateIpGoogleAccess: true
        enableFlowLogs: false
      - name: boomi-private-subnet
        region: us-central1
        ipCidrRange: 172.16.8.0/21
        privateIpGoogleAccess: true
        enableFlowLogs: false

- name: boomi-firewall
  type: firewall.py
  properties:
    network: $(ref.boomi-network.selfLink)
    rules:
      - name: boomi-allow-ssh-to-bastion
        description: Allow SSH from anywhere to Bastion
        allowed:
          - IPProtocol: tcp
            ports:
              - "22"
              - "3389"
        direction: INGRESS
        sourceRanges:
          - 0.0.0.0/0
        targetTags:
          - bastion
      - name: boomi-allow-http-https
        description: Allow HTTP/HTTPS from anywhere
        allowed:
          - IPProtocol: tcp
            ports:
              - "80"
              - "443"
        direction: INGRESS
        sourceRanges:
          - 0.0.0.0/0
      - name: boomi-allow-icmp
        description: Allow ICMP from anywhere
        allowed:
          - IPProtocol: ICMP
        direction: INGRESS
        sourceRanges:
          - 0.0.0.0/0

- name: boomi-cloud-router
  type: cloud_router.py
  properties:
    name: boomi-cloud-router
    network: $(ref.boomi-network.selfLink)
    region: us-central1
    asn: 65001
    nat-name: boomi-nat

- name: cloud-filestore
  type: cloud_filestore.py
  properties:
    location: {{ properties["zone"] }}
    description: Boomi File Store
    tier: STANDARD
    fileShares:
      - name: boomifileshare
        capacityGb: 1024
    networks:
      - network: $(ref.boomi-network.vpcName)
  metadata:
    dependsOn:
      - enable-apis

- name: bastion-instance
  type: bastion_instance.py
  properties:
    network: $(ref.boomi-network.selfLink)
    region: us-central1
    machineType: f1-micro
    machineImage: centos-cloud/global/images/family/centos-7
    minSize: 1
    maxSize: 5
